# Azora OS Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# OpenAI API Key for Elazar AI features
OPENAI_API_KEY=your_openai_api_key_here

# OpenWeatherMap API Key
OPENWEATHER_API_KEY=your_openweathermap_api_key_here

# Google API Key for various Google services
GOOGLE_API_KEY=your_google_api_key_here

# MetGIS Weather API Key
METGIS_API_KEY=your_metgis_api_key_here

# Stripe API Keys (Test Environment)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Paystack API Keys (Test Environment)
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key_here
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key_here

# Additional API Keys
AZORA_MASTER_KEY=your_azora_master_key_here
CRMS_API_KEY=your_crms_api_key_here

# Contact Information
ADMIN_EMAIL=your_admin_email@domain.com

# Database Configuration
DATABASE_URL=your_database_url_here

# JWT Secret
JWT_SECRET=your_jwt_secret_here

# Redis Configuration (if applicable)
REDIS_URL=your_redis_url_here

# Email Service Configuration
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password

# File Upload Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_here
GOOGLE_ANALYTICS_ID=your_google_analytics_id_here

# Blockchain Configuration
INFURA_PROJECT_ID=your_infura_project_id
ALCHEMY_API_KEY=your_alchemy_api_key
PRIVATE_KEY=your_private_key_here

# Social Media API Keys (if applicable)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
FACEBOOK_APP_ID=your_facebook_app_id
LINKEDIN_CLIENT_ID=your_linkedin_client_id

# Development/Production Environment
NODE_ENV=development
DEBUG=true