generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  title     String
  message   String
  action    String?
  status    String   @default("sent")
  createdAt DateTime @default(now())
}

model AuditLog {
  id        String   @id @default(cuid())
  eventType String
  details   Json
  createdAt DateTime @default(now())
  userId    String?
}