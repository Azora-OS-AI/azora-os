generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Event {
  id        String   @id @default(cuid())
  type      String
  data      Json
  userId    String?
  timestamp DateTime @default(now())
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  path      String
  timestamp DateTime @default(now())
}

model AuditLog {
  id        String   @id @default(cuid())
  eventType String
  details   Json
  createdAt DateTime @default(now())
  userId    String?
}