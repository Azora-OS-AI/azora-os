generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SalesCampaign {
  id          String   @id @default(cuid())
  name        String
  target      String
  strategy    String
  status      String   @default("active")
  deadline    DateTime
  createdAt   DateTime @default(now())
}

model Lead {
  id        String   @id @default(cuid())
  userId    String
  campaignId String
  status    String   @default("prospect")
  score     Float
  createdAt DateTime @default(now())
}

model AuditLog {
  id        String   @id @default(cuid())
  eventType String
  details   Json
  createdAt DateTime @default(now())
  userId    String?
}

model Listing {
  id          String   @id @default(cuid())
  item        String
  price       Float
  userId      String
  status      String   @default("active")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Transaction {
  id        String   @id @default(cuid())
  listingId String
  buyerId   String
  amount    Float
  createdAt DateTime @default(now())
}

model Domain {
  id          String   @id @default(cuid())
  domain      String   @unique
  owner       String
  status      String   @default("available")
  price       Float?
  currency    String   @default("USD")
  featured    Boolean  @default(false)
  inquiries   Int       @default(0)
  buyer       String?
  soldAt      DateTime?
  soldPrice   Float?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model DomainBid {
  id        String   @id @default(cuid())
  domainId  String
  bidder    String
  amount    Float
  currency  String   @default("USD")
  message   String?
  status    String   @default("active")
  createdAt DateTime @default(now())
}

model DomainWatchlist {
  id         String   @id @default(cuid())
  userId     String
  domain     String
  alertPrice Float?
  createdAt  DateTime @default(now())

  @@unique([userId, domain])
}