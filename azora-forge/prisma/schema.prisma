generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SalesCampaign {
  id          String   @id @default(cuid())
  name        String
  target      String
  strategy    String
  status      String   @default("active")
  deadline    DateTime
  createdAt   DateTime @default(now())
}

model Lead {
  id        String   @id @default(cuid())
  userId    String
  campaignId String
  status    String   @default("prospect")
  score     Float
  createdAt DateTime @default(now())
}

model Listing {
  id        String   @id @default(cuid())
  item      String
  price     Float
  userId    String
  status    String   @default("active")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Transaction {
  id        String   @id @default(cuid())
  listingId String
  buyerId   String
  amount    Float
  status    String   @default("completed")
  createdAt DateTime @default(now())
}

model AuditLog {
  id        String   @id @default(cuid())
  eventType String
  details   Json
  createdAt DateTime @default(now())
  userId    String?
}