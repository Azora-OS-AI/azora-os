# Azora OS Compliance Ecosystem - Production Configuration
# This file contains production-ready configuration settings

# Environment
NODE_ENV=production
ENVIRONMENT=production

# Service Ports
COMPLIANCE_DASHBOARD_PORT=4086
AUTOMATED_REPORTING_PORT=4087
QUANTUM_IOT_PORT=4088
GDPR_COMPLIANCE_PORT=4080
HIPAA_COMPLIANCE_PORT=4081
SOX_COMPLIANCE_PORT=4082
CCPA_COMPLIANCE_PORT=4083
PIPEDA_COMPLIANCE_PORT=4084
LGPD_COMPLIANCE_PORT=4085

# Database Configuration
DATABASE_URL=postgresql://compliance_user:secure_password@compliance-db.production.internal:5432/compliance_prod
DATABASE_SSL=true
DATABASE_POOL_SIZE=20
DATABASE_CONNECTION_TIMEOUT=30000

# Redis Configuration
REDIS_URL=redis://compliance-redis.production.internal:6379
REDIS_PASSWORD=secure_redis_password
REDIS_CLUSTER_ENABLED=true

# Message Queue
RABBITMQ_URL=amqp://compliance_user:secure_password@rabbitmq.production.internal:5672/compliance
RABBITMQ_HEARTBEAT=60

# MQTT Configuration
MQTT_BROKER=mqtt://mqtt-broker.production.internal:1883
MQTT_USERNAME=compliance_iot
MQTT_PASSWORD=secure_mqtt_password
MQTT_RECONNECT_INTERVAL=5000
MQTT_KEEPALIVE=60

# Security Configuration
JWT_SECRET=your-production-jwt-secret-change-this-in-production
ENCRYPTION_KEY=your-production-encryption-key-32-chars
AES_ENCRYPTION_KEY=your-256-bit-aes-encryption-key-here
QUANTUM_KEY_ROTATION_INTERVAL=86400000

# Compliance Settings
COMPLIANCE_CHECK_INTERVAL=300
REPORT_RETENTION_DAYS=2555
ALERT_RETENTION_DAYS=365
AUDIT_LOG_RETENTION_DAYS=2555

# IoT Settings
DEVICE_TIMEOUT=300000
MAX_DEVICE_CONNECTIONS=10000
DEVICE_DATA_RETENTION_DAYS=90
SENSOR_HEARTBEAT_INTERVAL=30000

# Performance Settings
CONNECTION_POOL_SIZE=50
CACHE_TTL=7200
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60
WORKER_THREADS=8
MAX_CONCURRENT_REQUESTS=100

# Monitoring & Observability
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
JAEGER_ENABLED=true
LOG_LEVEL=info
LOG_FORMAT=json
METRICS_INTERVAL=30

# External Integrations
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=compliance@yourcompany.com
EMAIL_SMTP_PASS=your-email-password
EMAIL_FROM=compliance@yourcompany.com

# Cloud Configuration (AWS)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET=azora-compliance-reports
CLOUDWATCH_LOG_GROUP=/azora/compliance

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=azora-compliance-backups

# Scaling Configuration
HPA_CPU_TARGET=70
HPA_MEMORY_TARGET=80
MIN_REPLICAS_DASHBOARD=3
MAX_REPLICAS_DASHBOARD=20
MIN_REPLICAS_REPORTING=2
MAX_REPLICAS_REPORTING=10
MIN_REPLICAS_IOT=3
MAX_REPLICAS_IOT=15

# Load Balancer Configuration
LB_HEALTH_CHECK_PATH=/health
LB_HEALTH_CHECK_INTERVAL=30
LB_HEALTH_CHECK_TIMEOUT=5
LB_HEALTH_CHECK_UNHEALTHY_THRESHOLD=3
LB_HEALTH_CHECK_HEALTHY_THRESHOLD=2

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/compliance.crt
SSL_KEY_PATH=/etc/ssl/private/compliance.key
SSL_CA_PATH=/etc/ssl/certs/ca.crt
FORCE_SSL=true

# Feature Flags
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_REAL_TIME_ALERTS=true
ENABLE_AUTOMATED_COMPLIANCE=true
ENABLE_IOT_INTEGRATION=true
ENABLE_QUANTUM_ENCRYPTION=true
ENABLE_AUDIT_LOGGING=true

# Maintenance
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System is under maintenance. Please try again later."