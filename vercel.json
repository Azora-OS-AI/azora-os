{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "env": {
    "NODE_ENV": "production",
    "AZORA_DEPLOYMENT_PLATFORM": "vercel"
  },
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs18.x",
      "memory": 2048,
      "maxDuration": 300
    }
  },
  "regions": ["fra1", "iad1", "sfo1"],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/production-server.ts"
    },
    {
      "source": "/services/(.*)",
      "destination": "/api/services.ts"
    }
  ]
}
