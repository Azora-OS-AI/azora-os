{
  "aiMonitor": {
    "enabled": true,
    "monitoringInterval": 30000,
    "autoHealingEnabled": true,
    "predictiveAnalysisEnabled": true,
    "alertThresholds": {
      "cpuUsage": 80,
      "memoryUsage": 85,
      "diskUsage": 90,
      "responseTime": 5000,
      "errorRate": 5,
      "networkLatency": 1000
    },
    "selfHealingActions": {
      "highCpuUsage": true,
      "highMemoryUsage": true,
      "highDiskUsage": true,
      "slowResponseTime": true,
      "highErrorRate": true,
      "networkIssues": true
    },
    "components": {
      "web_server": {
        "enabled": true,
        "healthEndpoint": "/api/health",
        "timeout": 5000
      },
      "database": {
        "enabled": true,
        "connectionString": "postgresql://localhost:5432/azora",
        "healthCheckQuery": "SELECT 1"
      },
      "authentication_service": {
        "enabled": true,
        "endpoint": "/api/auth/validate",
        "expectedResponse": 401
      },
      "unity_service": {
        "enabled": true,
        "platforms": ["web", "android", "ios", "windows", "linux"]
      },
      "compensation_system": {
        "enabled": true,
        "ledgerPath": "../database/founder_ledger.json"
      },
      "file_system": {
        "enabled": true,
        "criticalPaths": ["/workspaces/azora-os", "/workspaces/azora-os/database"],
        "minFreeSpace": "1GB"
      },
      "network": {
        "enabled": true,
        "testUrls": ["https://www.google.com", "https://api.github.com"],
        "maxLatency": 1000
      }
    },
    "aiAnalysis": {
      "correlationAnalysis": true,
      "predictiveModeling": true,
      "rootCauseAnalysis": true,
      "recommendationEngine": true,
      "learningEnabled": false
    },
    "logging": {
      "level": "info",
      "file": "../logs/ai_monitor.log",
      "maxSize": "10MB",
      "retention": "30d"
    },
    "alerts": {
      "email": {
        "enabled": false,
        "recipients": [],
        "smtp": {}
      },
      "webhook": {
        "enabled": false,
        "url": "",
        "headers": {}
      },
      "console": {
        "enabled": true,
        "colors": true
      }
    },
    "dataRetention": {
      "diagnosticHistory": 100,
      "selfHealingActions": 500,
      "healthReports": 30
    }
  }
}