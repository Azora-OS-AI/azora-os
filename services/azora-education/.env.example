# Azora Education Service Environment Configuration

# ==========================================
# SERVER CONFIGURATION
# ==========================================
NODE_ENV=development
PORT=4200
HOST=0.0.0.0

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
MONGODB_URI=mongodb://localhost:27017/azora-education
MONGODB_TEST_URI=mongodb://localhost:27017/azora-education-test

# Redis Configuration (Optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==========================================
# AUTHENTICATION CONFIGURATION
# ==========================================
JWT_SECRET=azora-education-secret-key-change-in-production-2024
JWT_EXPIRES_IN=7d
SESSION_SECRET=azora-education-session-secret-change-in-production

# ==========================================
# EXTERNAL API KEYS
# ==========================================
# OpenAI API (for advanced AI features)
OPENAI_API_KEY=your-openai-api-key-here

# Google APIs (for translation, vision, speech)
GOOGLE_API_KEY=your-google-api-key-here

# AWS Configuration (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=azora-education-files

# ==========================================
# EMAIL CONFIGURATION
# ==========================================
EMAIL_SERVICE=gmail
EMAIL_USER=noreply@azora.world
EMAIL_PASS=your-email-app-password

# Alert Email for monitoring
ALERT_EMAIL=alerts@azora.world

# ==========================================
# LOGGING CONFIGURATION
# ==========================================
LOG_LEVEL=info
DEBUG=false

# ==========================================
# SECURITY CONFIGURATION
# ==========================================
CORS_ORIGIN=http://localhost:3000,https://azora.world,https://education.azora.world

# ==========================================
# FEATURE FLAGS
# ==========================================
CLUSTER_MODE=false
WEB_CONCURRENCY=1

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================
# Enable/disable development features
DEV_MODE=true
HOT_RELOAD=true
SWAGGER_ENABLED=true
SEED_DATA=true

# ==========================================
# PRODUCTION OPTIMIZATIONS
# ==========================================
# Compression and performance settings
COMPRESSION_LEVEL=6
TRUST_PROXY=1

# ==========================================
# MONITORING AND ANALYTICS
# ==========================================
# Application monitoring
ENABLE_METRICS=true
HEALTH_CHECK_INTERVAL=30000

# Performance thresholds
RESPONSE_TIME_THRESHOLD=5000
ERROR_RATE_THRESHOLD=0.05
MEMORY_USAGE_THRESHOLD=0.8

# ==========================================
# OFFLINE CONFIGURATION
# ==========================================
# Offline caching settings
OFFLINE_CACHE_SIZE=2GB
OFFLINE_CACHE_TTL=2592000000
OFFLINE_SYNC_BATCH_SIZE=100
OFFLINE_SYNC_RETRY_ATTEMPTS=3

# ==========================================
# AI CONFIGURATION
# ==========================================
# AI model settings
AI_LEARNING_RATE=0.3
AI_MOMENTUM=0.1
AI_BINARY_THRESH=0.5
AI_HIDDEN_LAYERS=10,8,6
AI_ACTIVATION=sigmoid

# Personalization settings
AI_ADAPTATION_RATE=0.1
AI_CONFIDENCE_THRESHOLD=0.7
AI_MAX_RECOMMENDATIONS=10

# Math processing
MATH_PRECISION=6
MATH_TIMEOUT=5000

# ==========================================
# FILE UPLOAD CONFIGURATION
# ==========================================
# File upload limits
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,image/jpeg,image/png,image/gif,video/mp4,audio/mpeg

# ==========================================
# CURRICULUM SETTINGS
# ==========================================
# Department of Education standards
STANDARDS_VERSION=2023
PASSING_SCORE=70
EXCELLENT_SCORE=90

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# BACKUP AND MAINTENANCE
# ==========================================
# Database backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Maintenance settings
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.

# ==========================================
# INTEGRATION SETTINGS
# ==========================================
# Azora OS integration
AZORA_API_URL=https://api.azora.world
AZORA_API_KEY=your-azora-api-key

# Third-party integrations
CANVAS_API_URL=
CANVAS_API_KEY=
MOODLE_API_URL=
MOODLE_API_KEY=

# ==========================================
# LOCALIZATION
# ==========================================
# Default language and timezone
DEFAULT_LANGUAGE=en
DEFAULT_TIMEZONE=UTC

# Supported languages
SUPPORTED_LANGUAGES=en,es,fr,pt,sw,am,ha,yo

# ==========================================
# ANALYTICS AND TRACKING
# ==========================================
# Analytics settings
ENABLE_ANALYTICS=true
ANALYTICS_PROVIDER=mixpanel
ANALYTICS_TOKEN=your-analytics-token

# User tracking
TRACK_USER_BEHAVIOR=true
TRACK_LEARNING_PROGRESS=true

# ==========================================
# COMPLIANCE AND LEGAL
# ==========================================
# Data retention
DATA_RETENTION_DAYS=2555
USER_DATA_EXPORT=true

# Privacy settings
ENABLE_GDPR_COMPLIANCE=true
ENABLE_COPPA_COMPLIANCE=true
ENABLE_FERPA_COMPLIANCE=true

# ==========================================
# CDN AND STATIC ASSETS
# ==========================================
# CDN configuration
CDN_ENABLED=false
CDN_URL=https://cdn.azora.world
CDN_API_KEY=

# Static asset optimization
OPTIMIZE_ASSETS=true
ENABLE_WEBP=true

# ==========================================
# ERROR REPORTING
# ==========================================
# Error tracking
ERROR_REPORTING_ENABLED=true
ERROR_REPORTING_PROVIDER=sentry
SENTRY_DSN=your-sentry-dsn

# Error notification
ERROR_NOTIFICATION_EMAIL=errors@azora.world

# ==========================================
# DEVELOPMENT DATABASE SEEDS
# ==========================================
# Sample data for development
SEED_USERS=true
SEED_CURRICULUM=true
SEED_ASSESSMENTS=true
SEED_STANDARDS=true

# ==========================================
# TESTING CONFIGURATION
# ==========================================
# Test settings
TEST_TIMEOUT=10000
TEST_SLOW_THRESHOLD=5000
TEST_COVERAGE_ENABLED=true

# ==========================================
# DOCKER CONFIGURATION
# ==========================================
# Docker-specific settings
DOCKER_CONTAINER_NAME=azora-education
DOCKER_NETWORK=azora-network
DOCKER_RESTART_POLICY=unless-stopped

# ==========================================
# LOAD BALANCER CONFIGURATION
# ==========================================
# Load balancer health checks
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# ==========================================
# CACHE CONFIGURATION
# ==========================================
# Application caching
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_PREFIX=azora_edu_

# ==========================================
# QUEUE CONFIGURATION
# ==========================================
# Background job processing
QUEUE_ENABLED=true
QUEUE_CONCURRENCY=5
QUEUE_REDIS_DB=1

# ==========================================
# NOTIFICATION SETTINGS
# ==========================================
# Push notifications
PUSH_NOTIFICATIONS_ENABLED=false
FCM_SERVER_KEY=

# SMS notifications
SMS_ENABLED=false
TWILIO_SID=
TWILIO_TOKEN=
TWILIO_PHONE_NUMBER=

# ==========================================
# SOCIAL FEATURES
# ==========================================
# Social learning features
ENABLE_COMMENTS=true
ENABLE_DISCUSSIONS=true
ENABLE_COLLABORATION=false

# ==========================================
# PAYMENT INTEGRATION
# ==========================================
# Payment processing (for premium features)
STRIPE_ENABLED=false
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ==========================================
# EXPERIMENTAL FEATURES
# ==========================================
# Beta features
ENABLE_BETA_FEATURES=false
BETA_AI_TUTORING=false
BETA_VR_LEARNING=false
BETA_VOICE_COMMANDS=false