{
  "name": "user-service",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "services/user-service",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd services/user-service && go build -o dist/user-service ."
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd services/user-service && go test ./..."
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cd services/user-service && golangci-lint run"
      }
    }
  },
  "tags": ["scope:user", "type:service"]
}