generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Orchestration {
  id        String   @id @default(cuid())
  userId    String
  service   String
  action    String
  result    Json
  status    String   @default("completed")
  createdAt DateTime @default(now())
}

model AuditLog {
  id        String   @id @default(cuid())
  eventType String
  details   Json
  createdAt DateTime @default(now())
  userId    String?
}