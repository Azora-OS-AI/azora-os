generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ApiCall {
  id          String   @id @default(cuid())
  method      String
  path        String
  userId      String?
  ip          String
  responseTime Int
  statusCode  Int
  timestamp   DateTime @default(now())
}

model AuditLog {
  id        String   @id @default(cuid())
  eventType String
  details   Json
  createdAt DateTime @default(now())
  userId    String?
}