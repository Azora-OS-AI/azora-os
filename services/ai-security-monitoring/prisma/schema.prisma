generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SecurityEvent {
  id          String   @id @default(cuid())
  eventType   String
  details     Json
  severity    String
  timestamp   DateTime @default(now())
  userId      String?
  cameraId    String?
}

model AuditLog {
  id        String   @id @default(cuid())
  eventType String
  details   Json
  createdAt DateTime @default(now())
  userId    String?
}