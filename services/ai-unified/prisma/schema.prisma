// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UnifiedTask {
  id          String   @id @default(cuid())
  taskType    String
  inputData   Json
  outputData  Json?
  status      String   @default("pending") // pending, processing, completed, failed
  priority    Int      @default(1)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  completedAt DateTime?
  modelId     String?
  model       AIModel? @relation(fields: [modelId], references: [id])
  auditLogs   AuditLog[]

  @@map("unified_tasks")
}

model AIModel {
  id          String        @id @default(cuid())
  name        String        @unique
  provider    String        // e.g., "openai", "anthropic", "google"
  modelType   String        // e.g., "gpt-4", "claude-3", "gemini"
  capabilities Json         // JSON object describing model capabilities
  isActive    Boolean       @default(true)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  tasks       UnifiedTask[]

  @@map("ai_models")
}

model AuditLog {
  id        String   @id @default(cuid())
  action    String   // e.g., "task_created", "model_updated", "task_completed"
  entityId  String   // ID of the entity being audited
  entityType String  // e.g., "UnifiedTask", "AIModel"
  userId    String?  // User who performed the action (if applicable)
  details   Json     // Additional details about the action
  timestamp DateTime @default(now())
  taskId    String?
  task      UnifiedTask? @relation(fields: [taskId], references: [id])

  @@map("audit_logs")
}