// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SearchQuery {
  id          String   @id @default(cuid())
  query       String
  userId      String?
  results     Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  auditLogs   AuditLog[]
}

model SearchResult {
  id          String   @id @default(cuid())
  queryId     String
  query       SearchQuery @relation(fields: [queryId], references: [id])
  content     String
  relevance   Float
  createdAt   DateTime @default(now())
  auditLogs   AuditLog[]
}

model AuditLog {
  id          String   @id @default(cuid())
  action      String
  entityId    String
  entityType  String
  details     Json?
  userId      String?
  timestamp   DateTime @default(now())
  queryId     String?
  query       SearchQuery? @relation(fields: [queryId], references: [id])
  resultId    String?
  result      SearchResult? @relation(fields: [resultId], references: [id])
}