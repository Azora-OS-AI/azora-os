{
  "name": "azora-os",
  "private": true,
  "workspaces": [
    "services/*",
    "organs/*",
    "ui/*",
    "synapse/*",
    "infrastructure/*"
  ],
  "scripts": {
    "build": "./node_modules/.bin/vite build",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write .",
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "lint-staged": "^13.0.0",
    "prettier": "^2.0.0",
    "typescript": "^5.0.0",
    "vite": "^4.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
