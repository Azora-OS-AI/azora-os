    "dev": "pnpm --filter driver-pwa dev",
    "build": "pnpm --filter driver-pwa build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@types/leaflet": "^1.9.20",
    "axios": "^1.12.2",
    "body-parser": "^2.2.0",
    "express": "^4.21.2",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.545.0",
    "react-icons": "^5.5.0",
    "react-leaflet": "^5.0.0",
    "react-router-dom": "^7.9.4",
    "recharts": "^3.2.1",
    "socket.io-client": "^4.8.1"
  }
}
