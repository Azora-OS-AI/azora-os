{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,
    "allowImportingTsExtensions": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "allowJs": true,
    "checkJs": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/main-app/*"]
    }
  },
  "include": ["organs/**/*", "synapse/**/*", "vite-project/**/*", "cloud-ui/**/*", "compliance-ui/**/*", "dev-ui/**/*", "learn-ui/**/*", "marketplace-ui/**/*", "pay-ui/**/*", "shared/**/*"],
  "exclude": ["node_modules", "dist", "services", "**/*.css", "apps/main-app/index.css", "*.css", "**/*.js"]
}